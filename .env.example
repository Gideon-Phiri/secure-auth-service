# Database Configuration - CHANGE THESE PASSWORDS!
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
POSTGRES_USER=authuser
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
POSTGRES_DB=authdb
DATABASE_URL=postgresql+asyncpg://authuser:CHANGE_THIS_SECURE_PASSWORD@db:5432/authdb

# JWT Configuration - GENERATE A SECURE SECRET KEY!
SECRET_KEY=CHANGE_THIS_TO_A_VERY_LONG_RANDOM_SECRET_KEY_AT_LEAST_32_CHARACTERS
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# Security Settings
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15
ALLOWED_HOSTS=localhost,127.0.0.1

# SMTP Email Settings
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
